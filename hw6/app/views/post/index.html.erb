<div class="content">
	<nav class="secondaryNavs">
		<%= link_to "All Posts", posts_path %> |
		<%= link_to "Create Post", new_post_path %>	</nav>
	<h2>Here are all the posts</h2>
	<ul class="listed">
		<% @posts.each do |post| %>
			<li>
				<span class="postTitle"><%= post.title %></span>
				<span class="editPost">
					<%= link_to "Edit Post", edit_post_path(post.id) %>
				</span>
				<div class="postContent">
					<%= post.content %>
				</div>
			</li>
		<% end %>
	</ul>
</div>